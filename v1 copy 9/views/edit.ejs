<%-include ("partials/header"); -%>

    <div class="container" style="padding-top:70px; ">
        <h1 style="text-align:center">Edit <%=editcg.name%></h1>
        <div style="width:30%; margin : 0 auto; ">

            <form action="/campgrounds/<%=editcg._id%>?_method=PUT" method="POST">
                <div class="mb-2">
                    <input type="text" class="form-control" name="editedcg[name]" value="<%=editcg.name%>">
                </div>
                <div class="mb-2">
                    <input type="text" class="form-control" name="editedcg[image]"value="<%=editcg.image%>">
                </div>

                <div class="mb-2">
                    <input type="text" class="form-control" name="editedcg[description]" value="<%=editcg.description%>">
                </div>


                <div class="d-grid gap-2">
                    <button class="btn btn-secondary ">Submit!</button>
                </div>


            </form>
            <a href="/campgrounds">Go Back</a>
        </div>
    </div>
    <%-include ("partials/footer"); -%>