<%-include ("partials/header"); -%>
    <div class="container" style="margin-top:6em">
        <div class="row">
            <div class="col-md-3">
                <p class="lead">Yelp Camp</p>
                <div class="list-group">
                    <li class="list-group-item active">Info-1</li>
                    <li class="list-group-item">Info-2</li>
                    <li class="list-group-item">Info-3</li>

                </div>
            </div>

            <div class="col-md-9">
                <div class="border border-success">

                    <img src="<%=cg.image%>" class="img-fluid" alt="Responsive image" style="width:100%">
                    <div class="caption-full" style="padding:4px">
                        <h4 class="float-end">
                            $9.00/night
                        </h4>
                        <h4>
                            <a>
                                <%=cg.name%>
                            </a>
                        </h4>
                        <p>
                            <%=cg.description%>
                        </p>

                    </div>
                </div>

                <div class="card">
                    <div style="padding:4px">
                        <div class="card-body">
                            <p class="float-end"><a href="/campgrounds/<%=cg._id%>/comments/new"
                                    class="btn btn-success">Add
                                    comment</a></p>

                        </div>
                        <div style="margin-top:3em">
                            <div class="card-body">
                                <%cg.comments.forEach(function(comment){%>
                                    <div class="row">
                                        <div class="col-md-12">
                                            <strong>
                                                <%=comment.author%>
                                            </strong>
                                            <span class="float-end">10 days ago</span>
                                            <p>
                                                <%=comment.text%>
                                            </p>
                                        </div>
                                    </div>




                                    <%});%>




                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <%-include ("partials/footer"); -%>